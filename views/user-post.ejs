<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Posts</title>
    <link rel="stylesheet" href="./styles/comments.css">
</head>

<body>
    <div class="container">  
        <form id="contact" action="/user-post" method="POST">
            <h3>View User Posts</h3>
            <fieldset>
                <label for="userId">Enter User ID:</label>
                <input placeholder="Enter User ID" type="text" id="userId" name="userId" tabindex="1" required autofocus>
            </fieldset>
            <fieldset>
                <button type="submit" id="contact-submit" data-submit="...Sending">Get Posts</button>
            </fieldset>
        </form>
    </div>
    <div class="dis">
        <% if (posts) { %>
            <div class="post-details">
                <div class="ag-format-container">
                    <div class="ag-courses_box">
                        <% posts.forEach((post, index) => { %>
                            <div class="post-item">
                                <div class="ag-courses_item">
                                    <a href="#" class="ag-courses-item_link">
                                        <div class="ag-courses-item_bg"></div>
                                        <div class="ag-courses-item_title">
                                            <h2 style="font-size: 25px;">Post Details <%= index + 1 %></h2> <!-- Inline CSS for large size -->
                                        </div>
                                        <div class="ag-courses-item_date-box">
                                            <span class="ag-courses-item_date">
                                                <p><strong>ID:</strong> <%= post.id %></p>
                                                <p><strong>Title:</strong> <%= post.title %></p>
                                                <p><strong>Body:</strong> <%= post.body %></p>
                                            </span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>
